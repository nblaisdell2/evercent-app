{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/**/*"]
}
